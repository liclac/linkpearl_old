<%= bootstrap_form_for @group do |f| %>
  <%= f.text_field :name, autofocus: true %>
  <%= f.text_area :message, help: "Only members will be able to see this message.", rows: 7 %>
  
  <% if @group.new_record? %>
    <%= f.form_group do %>
      <%= label_tag "Founder" %>
      <%= select_tag :founder, options_for_select(current_user.characters.collect {|c| [c.name, c.lodestone_id]}), class: 'form-control' %>
    <% end %>
  <% end %>
  
  <%= f.form_group do %>
    <%= f.primary %>
  <% end %>
<% end %>
