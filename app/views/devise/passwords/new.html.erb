<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Forgot your password?</h3>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>
        
        <%= f.email_field :email, autofocus: true, help: 'Enter your email address to send password reset instructions.' %>
        
        <%= f.form_group do %>
          <%= f.submit "Send", class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <%= render "devise/shared/links" %>
</div>
